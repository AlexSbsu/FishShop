<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<title>Horse_shop_Bootstrap</title>*@
    <title>@ViewData["Title"] - Rybka</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-5.3.2-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fish_Shop1.styles.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-5.3.2-dist/css/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <style>
        a:hover { background-color: yellow; }
    </style>
</head>

<body class="container-fluid" style="background-image:url('../images/fon_3216x2144_pexels-photo-4833216.jpeg')">
    
    <!-----------------------HEADER-MY------------->    
  
    <!---------NAVIGATION-MY-->    
    <div class="row" style="margin-bottom:50px">
        <nav class="navbar navbar-expand-lg fixed-top border-bottom navbar-toggleable-sm navbar-light bg-white box-shadow col-12">
        <div class="container-fluid">
        <a class="nav-link active navbar-brand" aria-current="page" asp-controller="Home" asp-action="index"> Главная </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
                                                              aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="navbar-nav" style="display: flex; justify-content: space-between; align-items: center;">
                    <a class="nav-link" href="feedback.html" style="display:none"> История заказов </a>
                    <a class="nav-link" href="feedback.html" style="display:none"> Обратная связь  </a>
                    <a class="nav-link" aria-current="page" asp-controller="Home" asp-action="about"> О нас </a>
                    <!-------------Dropdown-MY------------->
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Разное</a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a class="dropdown-item" href="#">Item1</a></li>
                            <li><a class="dropdown-item" href="#">Item2</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Item3</a></li>
                        </ul>
                    </div>
                    <!-------------Dropdown-MY------------->
                </div>

                <!--div class="me-auto"> ----------------------</div
                class="d-flex" class="float-right class="ml-auto" class="align-self-end" class="text-right"
                class="align-items-end" "
                -->

                <form class="d-flex" class="ml-auto" role="search">
                    <input class="form-control me-2" type="search" placeholder="Поиск...." aria-label="Поиск...">
                    <button class="btn btn-outline-success" type="submit">Поиск</button>
                </form>

            </div>
        </div>
        </nav>
    </div>

    <div class="row">
        <aside class="col-lg-2 col-md-2 col-sm-12" style="margin-top:50px">
            <div class="position-fixed"> 
            <div><b>Фильтр:</b></div>
            <a href="#" title="Item1">LeftSide_Item1</a> 
            <br />
            <a href="#" class="class3" title="Item2">LeftSide_Item2</a>
            <br />
            <a href="#" target="_blank" class="class4" title="Item3">LeftSide_Item3</a>
            </div>
        </aside>

<!-----------------------MAIN-MY------------->
        
      @RenderBody()
        
<!-----------------------MAIN-MY------------->
    </div>
    <br />
<!-----------------------FOOTER------------->
    <footer class="border-top footer fixed-bottom text-muted bg-white box-shadow">
        <div class="container">
            &copy; 2024 - Fish_Shop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            @RenderSection("Footer",false)
        </div>
    </footer>
<!-----------------------FOOTER------------->

</body>
</html>
