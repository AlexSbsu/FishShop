<!------MAIN------------->
@model IEnumerable<Product>

<main class="col-lg-10 col-md-10 col-sm-12" >
    <div>
        <h2 style="text-align: center;">Рыбёшечки</h2>
    </div>
    <div class="dropdown">
        <button class="btn btn-secondary btn-lg dropdown-toggle bg-white box-shadow" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="color:black">
            Сортировать :
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="nameasc" selected="selected">  Имя: По возрастанию  </a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="namedesc">                     Имя: По убыванию     </a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="costasc">                      Цена: По возрастанию </a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="costdesc">                     Цена: По убыванию    </a></li>
        </ul>
    </div>
        

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach(var mod in Model)
        {
            <div class="col" >
                <div class="card" style="max-width:5000px; max-height:5000px; ">
                    <img src="images/@mod.ImageFile" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@mod.Name</h5>
                        <p class="card-text" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-height:100px;">@mod.ShortDescription</p>
                        <div class="center"> 
                            <div class="buttons d-flex flex-row"> 
                                <div class="cart"><i class="fa fa-shopping-cart"></i></div> <button class="btn btn-success cart-button px-5"><span class="dot"></span>Add to cart </button> </div> </div>
                        <p style="text-align: right;">Цена: @mod.Cost р.</p>
                    </div>
                </div>
            </div>
        }       

    </div>
</main>


